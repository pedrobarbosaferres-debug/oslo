    <p id="resultado"></p>

    <script>
    function verificar() {
      let score = 0;

      const q1 = document.querySelector('input[name="q1"]:checked');
      const q2 = document.querySelector('input[name="q2"]:checked');
      const q3 = document.querySelector('input[name="q3"]:checked');

      if(q1 && q1.value === "mediana") score++;
      if(q2 && q2.value === "certo") score++;
      if(q3 && q3.value === "certo1") score++;

      document.getElementById("resultado").textContent = `Você acertou ${score} de 3 perguntas!`;
    }
  </script>

